FROM python:3.6.6-alpine3.8

RUN apk update && \
         apk add \
         curl \
         less \
         vim \
         make \
         bash


ENV DIRPATH /opt/{{ project_name }}
LABEL "application"="{{ project_name }}-docs"
RUN mkdir -p $DIRPATH/docs
WORKDIR $DIRPATH/docs
COPY . .
RUN pip install -U pip \
  && pip install -r requirements.txt
